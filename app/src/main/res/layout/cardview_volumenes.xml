<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_volumen"
        android:layout_width="371dp"
        android:layout_height="599dp"
        android:layout_margin="10dp"
        android:padding="20dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="7dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="607dp"
            android:padding="16dp"
            app:cardBackgroundColor="#61353131"

            >

            <ImageView
                android:id="@+id/volumen_portada"
                android:layout_width="wrap_content"
                android:layout_height="468dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="9dp"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/volumen_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/volumen_portada"
                android:text="Id"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="invisible" />


            <TextView
                android:id="@+id/volumen_numero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/volumen_id"
                android:text="vol-Numero"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/volumen_doi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/volumen_numero"
                android:text="doi"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/volumen_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/volumen_doi"
                android:text="publicado"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>